{
    "version": 2,
    "projects": [
      {
        "name": "frontend",
        "path": "frontend",
        "buildCommand": "npm run build",
        "outputDirectory": "frontend/build"
      },
      {
        "name": "backend",
        "path": "backend",
        "outputDirectory": "api"
      }
    ],
    "builds": [
      {
        "src": "backend/main.py",
        "use": "@vercel/python"
      },
      {
        "src": "frontend/build/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend/main.py"
      },
      {
        "src": "/(.*)",
        "dest": "frontend/build/$1"
      }
    ]
  }
  